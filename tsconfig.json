{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "types": ["node"],
    "module": "ES2020",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "removeComments": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}

